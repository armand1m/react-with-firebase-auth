{
  "name": "react-with-firebase-auth",
  "version": "1.0.0",
  "description": "Higher Order Component for integrating Firebase with a React Component",
  "author": "armand1m",
  "license": "MIT",
  "repository": "armand1m/react-with-firebase-auth",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 react-scripts-ts test --env=jsdom --coverage",
    "test:watch": "react-scripts-ts test --env=jsdom",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "lint": "prettier --check 'src/**/*.{ts,tsx}'",
    "lint:fix": "prettier --write 'src/**/*.{ts,tsx}'",
    "prepare": "npm run build",
    "predeploy-example": "cd example && npm install && npm run build",
    "deploy-example": "gh-pages -d example/build",
    "travis-deploy-once": "travis-deploy-once"
  },
  "peerDependencies": {
    "firebase": "^7.0.0",
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^24.0.6",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "codecov": "^3.2.0",
    "cross-env": "^6.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "gh-pages": "^2.0.1",
    "prettier": "^1.19.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts-ts": "^3.1.0",
    "rollup": "^1.21.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss-modules": "^2.0.1",
    "rollup-plugin-typescript2": "^0.24.0",
    "rollup-plugin-url": "^2.2.0",
    "semantic-release": "^15.13.3",
    "travis-deploy-once": "^5.0.11",
    "typescript": "^3.3.3333"
  },
  "files": [
    "dist"
  ],
  "dependencies": {}
